<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="oval" android:useLevel="false">

            <size android:width="7dp" android:height="7dp"/>
            <solid android:color="@color/gray8" android:width="1dp"/>
            <size android:height="7dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="8dp"/>
            <solid android:color="@color/green1"/>
            <size android:height="5dp" android:width="20dp"/>

        </shape>
    </item>
</selector>